<div id="colorlib-main">
<p id="notice"><%= notice %></p>

<h1 align="center">Listing all articles</h1>
<% @blogs.each do |blog| %>
 <div class="row">
  <div class="col-xs-8 col-xs-offset-2">
   <div class="well well-lg">
    <div class="article-title">
     <%= link_to blog.title, blog_path(blog) %>
    </div>
    <div class="article-body">
     <%= truncate(blog.content, length: 100) %>
    </div>
    <div class="article-actions">
     <%= link_to "Edit", edit_blog_path(blog), class: "btn btn-xs btn-primary" %>
     <%= link_to "Delete", blog_path(blog), method: :delete, data: { confirm: "Are you sure you want to delete this article?"}, class: "btn btn-xs btn-danger" %>
    </div>
   </div>
  </div>
 </div>
<% end %>

</div>
